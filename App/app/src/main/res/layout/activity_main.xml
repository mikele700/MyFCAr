<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.unina.myfcar.activity.MainActivity">


    <Button
        android:id="@+id/entra"
        android:layout_width="133dp"
        android:layout_height="66dp"
        android:layout_marginTop="188dp"
        android:text="ENTRA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fca_logo" />

    <ImageView
        android:id="@+id/fca_logo"
        android:layout_width="368dp"
        android:layout_height="230dp"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="33dp"
        app:layout_constraintBottom_toTopOf="@+id/benvenuto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fca_brands" />

    <TextView
        android:id="@+id/benvenuto"
        android:layout_width="340dp"
        android:layout_height="71dp"
        android:layout_marginBottom="168dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        android:text="@string/benvenuto"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fca_logo" />

</android.support.constraint.ConstraintLayout>
